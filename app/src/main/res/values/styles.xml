<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CircleStyledTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:background">@drawable/circle</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/upcoming_meeting_organizer_label_text_size</item>
        <item name="android:textColor">@color/labels</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MediumSizeTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CurrentMeeting" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/cnRed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="UpcomingMeetingText" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/cnLightBlue</item>
    </style>

    <style name="UpcomingMeetingTime" parent="UpcomingMeetingText">
        <item name="android:textSize">38sp</item>
    </style>

    <style name="UpcomingMeetingName" parent="UpcomingMeetingText">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TimeDateFragment" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/cnLightBlue</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="TimeDateFragmentTime" parent="TimeDateFragment">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/time_text_size</item>
    </style>

    <style name="ParticipantsLink" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/cnRed</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="StatusTextView" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/cnDarkBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:textSize">@dimen/text_view_status_text_size</item>
    </style>

    <style name="StatusTextViewFree" parent="StatusTextView">
        <item name="android:background">@color/cnLightBlue</item>
        <item name="android:text">@string/meeting_room_status_free</item>
    </style>

    <style name="StatusTextViewBooked" parent="StatusTextView">
        <item name="android:background">@color/cnRed</item>
        <item name="android:text">@string/meeting_room_status_booked</item>
    </style>


    <style name="CustomDialogButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">@dimen/meeting_fragment_control_dialog_buttons_side_margin</item>
        <item name="android:layout_marginRight">@dimen/meeting_fragment_control_dialog_buttons_side_margin</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/meeting_fragment_control_dialog_elements_margin_bottom</item>
        <item name="android:paddingLeft">@dimen/meeting_fragment_control_dialog_buttons_side_padding</item>
        <item name="android:paddingRight">@dimen/meeting_fragment_control_dialog_buttons_side_padding</item>

    </style>

    <style name="CustomDialogTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/meeting_fragment_control_dialog_title_font_size</item>
        <item name="android:layout_marginBottom">@dimen/meeting_fragment_control_dialog_elements_margin_bottom</item>
    </style>

    <style name="CustomDialogInfo">
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/meeting_fragment_control_dialog_info_font_size</item>
        <item name="android:layout_marginBottom">@dimen/meeting_fragment_control_dialog_elements_margin_bottom</item>
    </style>


</resources>
