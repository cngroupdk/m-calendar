<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <solid
                android:color="@color/meeting_fragment_background"/>

            <corners
                android:radius="25dip"/>
        </shape>

    </item>




    <item
        android:bottom="10dp"
        android:left="0dp"
        android:right="10dp"
        android:top="0dp">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <solid
                android:color="@color/meeting_fragment_background"/>

            <stroke
                android:width="1dp"
                android:color="@color/cnRed"/>

            <corners
                android:radius="25dip"/>
        </shape>
    </item>
</layer-list>